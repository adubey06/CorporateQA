@model CorporateQnA.Models.UserRegister
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="fluid-container d-flex m-0 p-0">
        <div class="vw-75 p-0 " style="background-color:#75618a">
            <div class="w-70 vh-100 background-branding-container">
                <img src="~/keka-big.png">
                <div class="logo display-4 sub-logo">
                    Corporate QnA
                </div>
            </div>
        </div>
        <div class="login-container-layout">
            <div class="vw-30 login-container m-5">
                <div class="logo display-4">
                    Corporate QnA
                </div>
                <h4 class="d-block login-heading">Register</h4>
                <form class="registration-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-ctrl">
                        <input asp-for="Name" class="form-control" type="text" placeholder=" ">
                        <label asp-for="Name"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="Email" class="form-control" type="text" placeholder=" ">
                        <label asp-for="Email"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="Designation" class="form-control" type="text" placeholder=" ">
                        <label asp-for="Designation"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="Role" class="form-control" type="text" placeholder=" ">
                        <label asp-for="Role"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="Location" class="form-control" type="text" placeholder=" ">
                        <label asp-for="Location"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="Password" class="form-control" type="password" placeholder=" ">
                        <label asp-for="Password"></label>
                    </div>

                    <div class="form-ctrl">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder=" ">
                        <label asp-for="ConfirmPassword" for=""></label>
                    </div>
                    <button type="submit" class="btn btn-primary d-block button-size">Register</button>
                </form>
                <a href="login">Already Have Account?</a>
            </div>
        </div>
    </div>




</body>
</html>